@model IEnumerable<Foosball.Models.FoosballModels.Player>

@{
    ViewBag.Title = "Index";
}
<div class="jumbotron jumbo-marpad">
    <h2>Highscore</h2>
    <table class="table table-hover">
        <tr class="success">
            <th>Rank #</th>
            <th>@Html.DisplayNameFor(model => model.Elo)</th>
            <th>@Html.DisplayNameFor(model => model.Username)</th>
            <th>Last game</th>
            <th></th>
        </tr>
        @{
            for (var i = 0; i < Model.ToList().Count; i++)
            {
                var item = Model.ToList()[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Html.DisplayFor(modelItem => item.Elo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                    <td>
                        @if (item.PlayerGames.Count > 0)
                        {
                            if (item.PlayerGames.Last().IsWin.Equals(true)) 
                            {
                                <label class="label label-success">Won</label>
                            }
                            else
                            {
                                <label class="label label-danger">Lost</label>
                            }
                        }
                        else
                        {
                            <label class="label label-warning">No Games played</label>
                        }
                    </td>
                    <td>@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-default" })</td>
                </tr>
            }
        }
    </table>
</div>
